  "version": "2.0.0",
  "tasks": [
    {
      "label": "webpack:build",
      "command": "tsc webpack.config.ts && webpack",
      "type": "shell",
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "label": "webpack:server",
      "command": "tsc webpack.config.ts && webpack-dev-server",
      "type": "shell",
      "problemMatcher": [
        "$tsc"
      ]
    }
  ]
}